<section class="py-24 w-full relative overflow-hidden">
  <img
    src="/easy-fast/red.svg"
    alt=""
    class="absolute top-0 right-0 w-[200px] h-auto z-0"
  />
  <img
    src="/easy-fast/yellow.svg"
    alt=""
    class="absolute bottom-0 left-0 w-[200px] h-auto z-0"
  />
  <div
    class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-[1280px] relative z-10"
  >
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div>
        <p class="text-[#5E6282] text-lg uppercase mb-2">Easy and Fast</p>
        <h2 class="text-[#14183E] text-5xl font-bold mb-8">
          Book Your Next Trip<br />In 3 Easy Steps
        </h2>

        <div class="space-y-8">
          <div class="flex items-start space-x-6">
            <div
              class="w-12 h-12 bg-[#F0BB1F] rounded-lg flex items-center justify-center"
            >
              <img
                src="/easy-fast/mini-icon-first.svg"
                alt=""
                class="w-6 h-6"
              />
            </div>
            <div>
              <h3 class="text-[#5E6282] text-xl font-bold mb-2">
                Choose Destination
              </h3>
              <p class="text-[#5E6282]">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Urna,
                tortor tempus.
              </p>
            </div>
          </div>

          <div class="flex items-start space-x-6">
            <div
              class="w-12 h-12 bg-[#F15A2B] rounded-lg flex items-center justify-center"
            >
              <img
                src="/easy-fast/mini-icon.second.svg"
                alt=""
                class="w-6 h-6"
              />
            </div>
            <div>
              <h3 class="text-[#5E6282] text-xl font-bold mb-2">
                Make Payment
              </h3>
              <p class="text-[#5E6282]">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Urna,
                tortor tempus.
              </p>
            </div>
          </div>

          <div class="flex items-start space-x-6">
            <div
              class="w-12 h-12 bg-[#006380] rounded-lg flex items-center justify-center"
            >
              <img
                src="/easy-fast/mini-icon-third.svg"
                alt=""
                class="w-6 h-6"
              />
            </div>
            <div>
              <h3 class="text-[#5E6282] text-xl font-bold mb-2">
                Reach Airport on Selected Date
              </h3>
              <p class="text-[#5E6282]">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Urna,
                tortor tempus.
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="relative">
        <div class="relative">
          <img src="/easy-fast/girl.svg" alt="Trip to Greece" class="w-full" />

          <div
            class="absolute -left-16 top-8 bg-white rounded-2xl p-4 shadow-lg w-[300px]"
          >
            <div class="flex items-center space-x-4 mb-4">
              <img
                src="/easy-fast/circle-image.svg"
                alt=""
                class="w-12 h-12 rounded-full"
              />
              <div>
                <h4 class="text-[#14183E] font-medium">Trip to Greece</h4>
                <p class="text-[#5E6282] text-sm">by Robbin john</p>
              </div>
            </div>
            <p class="text-[#5E6282] mb-2">14-29 June</p>
            <div class="flex items-center space-x-2">
              <img
                src="/easy-fast/mini-icon-fifth.svg"
                alt=""
                class="w-6 h-6"
              />
              <img src="/easy-fast/heart-icon.svg" alt="" class="w-6 h-6" />
              <img src="/easy-fast/green.svg" alt="" class="w-6 h-6" />
            </div>
            <div class="flex items-center justify-between mt-4">
              <div class="flex items-center space-x-2">
                <img
                  src="/easy-fast/mini-icon-fifth.svg"
                  alt=""
                  class="w-6 h-6"
                />
                <span class="text-[#5E6282] text-sm">24 people going</span>
              </div>
              <img src="/easy-fast/heart-icon.svg" alt="" class="w-6 h-6" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
